{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "node16",
    "moduleResolution": "node16",
    "target": "es2022",
    "lib": ["es2022"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "server.js",
    "config/**/*.js",
    "controllers/**/*.js",
    "routes/**/*.js",
    "middlewares/**/*.js",
    "models/**/*.js",
    "**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
